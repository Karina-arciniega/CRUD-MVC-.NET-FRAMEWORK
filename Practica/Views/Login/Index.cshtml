@{
    ViewBag.Title = "Login";
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @*Font awesome*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    @*Sweet alert*@
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.min.css'>

    @*Bootstrap*@
    <link rel="stylesheet" href="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/docs-app/css/dist/mdb5/standard/core.min.css" />
    @*MDB Bootstrap*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a id="NavLogo" class="navbar-brand" href="" style="visibility: hidden;"><img src="" height="30" runat="server"></a>
            <div id="NavItems" class="d-flex flex-row" style="visibility: hidden;">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-black"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                </div>
            </div>
        </div>
    </nav>
    <BR />
    <BR />
    <BR />
    <div class="container-fluid">
        
        <div>
            <div id="supervisor" class="tab-pane fade show active ">
                <div class="container col-md-4 p-4  shadow-lg ">
                    <div class="w-100 p-4 d-flex justify-content-center pb-4 text-center">
                        <h1 class="h3">
                            <i class="fa-solid fa-user-lock"></i>
                        </h1>
                    </div>

                    <form id="frm" method="post" action="" class="form">
                        <!-- User input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="user" name="correo" class="form-control" required>
                            <label class="form-label" for="user">Ingrese su correo</label>
                            <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 104.8px;"></div><div class="form-notch-trailing"></div></div>

                        </div>
                        <!-- Password input -->
                        <div class="form-outline mb-4">

                            <input type="password" id="contrasena" name="contrasena" class="form-control" required>
                            <label class="form-label" for="pass">Ingrese su contraseña</label>
                            <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 131.2px;"></div><div class="form-notch-trailing"></div></div>
                        </div>
                        <div class="form-outline mb-4">
                            <!-- Script de comprobacion de mensaje -->
                            <div id="alert" class="alert alert-warning" style="display:none">
                                incorrect data
                            </div>

                        </div>

                        <br>

                        <button type="submit" class="btn btn-primary btn-block" style="background: #005384">Iniciar sesión</button>

                    </form>

                </div>
            </div>
        </div>
    </div>

</body>

@*Sweet alert*@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src=" https://unpkg.com/sweetalert/dist/sweetalert.min.js "></script>
@*Jquery*@

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="~/Scripts/js/Login.js"></script>
