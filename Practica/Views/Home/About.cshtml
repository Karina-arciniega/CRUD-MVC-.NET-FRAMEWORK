@{
   var user = Session["user"];
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD</title>
    <link rel="icon" href="~/favicon.ico">

    @*Font awesome*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />


    @*Jquery*@
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    @*Sweet alert*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" charset="UTF-8"></script>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.min.css' charset="UTF-8">

    @*MDB Bootstrap*@
    <link href=https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/1.0.0/mdb.min.css rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    @*Datatables*@
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />

</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-primary h-50 w-100 text-white">
        <div class="container">

            <h3>Bienvenido @user </h3>
            <a href="~/Home/Cerrar"> <i class="fa-solid fa-right-from-bracket" style="color:white"></i> </a>
        </div>
    </nav>
    <div class="container  ">

        <div class="row p-2 m-3 w-100 justify-content-center">
            <div class="shadow-lg p-3">
                <div class="p-3">
                    <button type="button" class="btn btn-primary " data-bs-toggle="modal" data-bs-target="#myModal">Crear usuario </button>
                </div>
                
                <table class="table table-borderless table-condensed table-hover" id="TableSpecs">
                    <thead>
                        <tr>
                            @*<td><b>#</b></td>*@
                            <td><b>Nombre</b></td>
                            <td><b>Correo</b></td>
                            <td><b>Edad</b></td>
                            <td><b>CURP</b></td>
                            <td><b>Genero</b></td>
                            <td><b>Rol</b></td>
                            <td><b>Estado </b></td>
                            <td><b>Delete </b></td>
                            <td><b>Update </b></td>
                        </tr>
                    </thead>
                    <tbody id="tbody2">
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Datos del usuario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="row row-cols-lg-auto g-3 align-items-center form" id="frm" method="post" action="">
                        <div class="col-12 ">

                            <div class="input-group">
                                <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" onkeydown="return /[a-z, ]/i.test(event.key)" required />
                            </div>
                        </div>
                        <div class="col-12">

                            <div class="input-group">
                                <input type="email" class="form-control" id="correo" name="correo" placeholder="Correo" required />
                            </div>
                        </div>
                        <div class="col-12">

                            <div class="input-group">
                                <input type="text" class="form-control" id="curp" name="curp" placeholder="CURP" required />
                            </div>
                        </div>
                        <div class="col-12">

                            <div class="input-group">
                                <input type="number" class="form-control" id="edad" name="edad" placeholder="Edad" required />
                            </div>
                        </div>

                        <div class="col-12">

                            <div class="input-group">
                                <input type="text" class="form-control" id="contrasena" name="contrasena" placeholder="Contraseña" required />
                            </div>
                        </div>

                        <input type="hidden" name="Id" value="0" id="Id" required />
                        <input type="hidden" name="genero" value="Femenino" id="genero" required />
                        <input type="hidden" name="estado" value="1" id="estado" required />

                        <div class="col-12">
                            <label class="form-check-label" for="">
                                Genero:
                            </label>
                            <div style="display:flex;justify-content:left">
                                <div class="form-check">
                                    <label class="form-check-label" for="F">
                                        Femenino:
                                    </label>
                                    <input class="form-check-input" type="checkbox" id="F" checked />
                                </div>

                                <div class="form-check">
                                    <label class="form-check-label" for="M">
                                        Masculino:
                                    </label>
                                    <input class="form-check-input" type="checkbox" id="M" />
                                </div>
                            </div>

                        </div>

                        <div class="col-12">
                            <label for="select">Tipo de usuario:</label>
                            <select class="form-select" id="select" name="Rol" required>
                            </select>
                        </div>


                        <div class="col-12 ">
                            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal" id="save">Guardar</button>
                        </div>
                    </form>
                </div>
              
            </div>
        </div>
    </div>

    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/js/about.js"></script>

</body>
</html>




